#!/usr/bin/env bash
# manage_my_process

# Function to handle SIGTERM (Ctrl+C)
handle_sigterm() {
    echo "I am invincible!!!"
    exit 0
}

# Register the SIGTERM handler
trap handle_sigterm SIGTERM

# Infinite loop: Write "I am alive!" to /tmp/my_process
while true; do
    echo "I am alive!"
    sleep 2
done
